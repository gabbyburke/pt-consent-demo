# Google Cloud Platform Configuration
GCP_PROJECT_ID=gb-demos
GCIP_API_KEY=your-gcip-api-key-here

# Service Account (for local development)
# Download from GCP Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Firestore Configuration
FIRESTORE_DATABASE=(default)

# Mock Services (set to false when using real services)
USE_MOCK_EMAIL=true
USE_MOCK_SMS=true

# Security
SECRET_KEY=change-this-to-a-random-secret-key
TOKEN_EXPIRATION_MINUTES=15

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_KBA_ATTEMPTS=3
KBA_LOCKOUT_MINUTES=30

# Flask Configuration
FLASK_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
